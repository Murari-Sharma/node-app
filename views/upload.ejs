<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Photo Upload</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    body {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: var(--bg, #f4f4f4);
    }
    .upload-card {
      background: #fff;
      border-radius: 18px;
      box-shadow: 0 4px 24px rgba(0,0,0,0.10);
      max-width: 400px;
      margin: 32px auto;
      padding: 36px 32px 28px 32px;
      display: flex;
      flex-direction: column;
      align-items: center;
      transition: background 0.3s;
    }
    body.dark-mode .upload-card {
      background: #23272f;
      color: #f1f5f9;
    }
    .upload-avatar {
      width: 96px;
      height: 96px;
      border-radius: 50%;
      background: #e0e7ef;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 20px;
      overflow: hidden;
      border: 3px solid #0ea5e9;
    }
    .upload-avatar img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
    .upload-card h2 {
      font-size: 1.5rem;
      margin-bottom: 18px;
      color: #0ea5e9;
    }
    .upload-card label {
      font-weight: 600;
      margin-top: 12px;
      margin-bottom: 4px;
      align-self: flex-start;
    }
    .upload-card input[type="text"],
    .upload-card input[type="file"] {
      width: 100%;
      padding: 12px 10px;
      border-radius: 10px;
      border: 2px solid #cbd5e1;
      margin-bottom: 10px;
      font-size: 1rem;
      background: #f9fafb;
      color: #333;
      transition: border 0.2s;
    }
    .upload-card input[type="text"]:focus,
    .upload-card input[type="file"]:focus {
      border-color: #0ea5e9;
      outline: none;
    }
    .upload-card button {
      width: 100%;
      padding: 13px 0;
      margin-top: 10px;
      background: #0ea5e9;
      color: #fff;
      border: none;
      border-radius: 10px;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.2s;
    }
    .upload-card button:hover {
      background: #0369a1;
    }
    .upload-card .back-link {
      display: block;
      margin: 18px 0 0 0;
      color: #0ea5e9;
      text-align: center;
      text-decoration: none;
      font-weight: 500;
      font-size: 1rem;
      transition: color 0.2s;
    }
    .upload-card .back-link:hover {
      color: #0369a1;
      text-decoration: underline;
    }
    .upload-card #progressBar {
      width: 100%;
      margin-top: 10px;
      margin-bottom: 5px;
      display: none;
    }
    .upload-card #uploadStatus {
      min-height: 20px;
      margin-top: 6px;
      font-weight: 500;
      color: #0f766e;
      text-align: center;
    }
    @media (max-width: 600px) {
      .upload-card {
        padding: 20px 8px 18px 8px;
      }
    }
    body.dark-mode .upload-card input, body.dark-mode .upload-card input[type="file"] {
      background: #18181b;
      color: #fff;
      border-color: #334155;
    }
    body.dark-mode .upload-card button {
      background: #0ea5e9;
      color: #fff;
    }
    body.dark-mode .upload-card .back-link {
      color: #38bdf8;
    }
    body.dark-mode .upload-card .back-link:hover {
      color: #0ea5e9;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar', { page: 'upload' }) %>
  <main>
    <div class="upload-card">
      <div class="upload-avatar" id="avatarPreview">
        <svg width="64" height="64" fill="none" viewBox="0 0 24 24"><circle cx="12" cy="8" r="4" fill="#94a3b8"/><path d="M4 20c0-2.5 3.5-4 8-4s8 1.5 8 4" fill="#94a3b8"/></svg>
      </div>
      <h2>Upload Your Profile</h2>
      <form action="/uploaded" method="POST" enctype="multipart/form-data" id="uploadForm">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" required placeholder="Enter your name">
        <input type="file" name="photo" id="photo" accept="image/*" required>
        <button type="submit">Upload</button>
        <progress id="progressBar" value="0" max="100"></progress>
        <div id="uploadStatus" role="status"></div>
      </form>
      <a href="/" class="back-link">‚Üê Back to Gallery</a>
    </div>
  </main>
  <script>
    const form = document.getElementById('uploadForm');
    const progressBar = document.getElementById('progressBar');
    const uploadStatus = document.getElementById('uploadStatus');
    const photoInput = document.getElementById('photo');
    const avatarPreview = document.getElementById('avatarPreview');
    photoInput.addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(evt) {
          avatarPreview.innerHTML = `<img src="${evt.target.result}" alt="Preview" />`;
        };
        reader.readAsDataURL(file);
      } else {
        avatarPreview.innerHTML = `<svg width="64" height="64" fill="none" viewBox="0 0 24 24"><circle cx="12" cy="8" r="4" fill="#94a3b8"/><path d="M4 20c0-2.5 3.5-4 8-4s8 1.5 8 4" fill="#94a3b8"/></svg>`;
      }
    });
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      const formData = new FormData(form);
      const xhr = new XMLHttpRequest();
      xhr.open('POST', '/uploaded', true);
      xhr.upload.onprogress = function(e) {
        if (e.lengthComputable) {
          progressBar.style.display = 'block';
          progressBar.value = (e.loaded / e.total) * 100;
        }
      };
      xhr.onload = function() {
        progressBar.style.display = 'none';
        if (xhr.status === 200) {
          uploadStatus.textContent = 'Upload successful!';
          window.location.href = '/';
        } else {
          uploadStatus.textContent = 'Upload failed: ' + xhr.responseText;
        }
      };
      xhr.onerror = function() {
        progressBar.style.display = 'none';
        uploadStatus.textContent = 'An error occurred during upload.';
      };
      xhr.send(formData);
    });
  </script>
</body>
</html>
